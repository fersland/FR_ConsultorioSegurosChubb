@model IEnumerable<Consultorio_Seguros.Models.Asegurado>

@{
    ViewData["Title"] = "Asegurados / Lista";
    var errorMessage = TempData["errorMessage"]?.ToString();
    var successMessage = TempData["successMessage"]?.ToString();
}

<div class="container py-4">
    <div class="d-flex justify-content-between">
        <h4><i class="bi bi-star-fill"></i> @ViewData["Title"]?.ToString()</h4>

        <a asp-action="Create" class="btn btn-info"> <i class="bi bi-plus"></i> Nuevo</a>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            @if (!string.IsNullOrWhiteSpace(successMessage))
            {
                <div class="alert alert-success">
                    <b><i class="bi bi-check-lg"></i> </b> @successMessage
                    <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            else if (!string.IsNullOrWhiteSpace(errorMessage))
            {
                <div class="alert alert-danger">
                    <b><i class="bi bi-exclamation-triangle-fill"></i> </b> @errorMessage
                    <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>
        <div class="col-md-12">
            <div class="card border-0 shadow-lg">
                <div class="card-body">
                    <table class="table table-striped table-hover" id="example" style="width:100%">
                        <thead>
                            <tr>
                                <th>CEDULA</th>
                                <th>NOMBRE</th>
                                <th>CODIGO SEGURO</th>
                                <th>NOMBRE SEGURO</th>
                                <th>ASEGURADA</th>
                                <th>PRIMA</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model) {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Clientes.Cedula)</td>
                                <td>@Html.DisplayFor(modelItem => item.Clientes.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Seguros.Codigo)</td>
                                <td>@Html.DisplayFor(modelItem => item.Seguros.Nombre)</td>
                                <td>$ @Html.DisplayFor(modelItem => item.Seguros.SemiAsegurada)</td>
                                <td>$ @Html.DisplayFor(modelItem => item.Seguros.Prima)</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id"> <i class="bi bi-eye-fill"></i> </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id"> <i class="bi bi-pen"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id"> <i class="bi bi-trash3"></i> </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>