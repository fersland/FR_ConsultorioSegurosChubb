@model Consultorio_Seguros.Models.Asegurado

@{
    ViewData["Title"] = "Asegurados / Editar";
    var errorMessage = TempData["errorMessage"]?.ToString();
}
<div class="container py-4">
    <div class="d-flex justify-content-between">
        <h4><i class="bi bi-star-fill"></i> @ViewData["Title"]?.ToString()</h4>

        <a asp-action="Index" class="btn btn-info"><i class="bi bi-arrow-return-left"></i> Regresar</a>
    </div>

    <div class="row mt-4">
        @if (!string.IsNullOrWhiteSpace(errorMessage))
        {
            <div class="alert alert-danger">
                <b>Error : </b> @errorMessage
                <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="col-md-12">
            <div class="card border-0 shadow-lg">
                <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label  class="control-label">SEGUROS</label>
                <select asp-for="SeguroId" class="form-control" asp-items="@(new SelectList(ViewBag.Seguros, "Id", "Nombre"))">
                    
                </select>
                
            </div>

            <div class="form-group">
                <label class="control-label">CLIENTE</label>
                <select asp-for="ClienteId" class="form-control" asp-items="@(new SelectList(ViewBag.Clientes, "Id", "Nombre"))">
                    
                </select>
                
            </div>


            <div class="form-group mt-4">
                <button type="submit" class="btn btn-warning" ><i class="bi bi-plus"></i> Editar</button>
            </div>
        </form>
                </div>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
