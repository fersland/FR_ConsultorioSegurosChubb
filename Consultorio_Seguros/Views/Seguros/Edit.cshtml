@model Consultorio_Seguros.Models.Seguro

@{
    ViewData["Title"] = "Seguros / Editar";
    var errorMessage = TempData["errorMessage"]?.ToString();
}

<div class="container py-4">
    <div class="d-flex justify-content-between">
        <h4><i class="bi bi-exposure"></i> @ViewData["Title"]?.ToString()</h4>

        <a asp-action="Index" class="btn btn-info"><i class="bi bi-arrow-return-left"></i> Regresar</a>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            @if (!string.IsNullOrWhiteSpace(errorMessage))
            {
                <div class="alert alert-danger">
                    <b><i class="bi bi-exclamation-triangle-fill"></i> </b> @errorMessage
                    <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>

        <div class="col-md-6">
            <div class="card border-0 shadow-lg">
                <div class="card-body">

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Codigo" class="control-label"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SemiAsegurada" class="control-label"></label>
                <input asp-for="SemiAsegurada" class="form-control" />
                <span asp-validation-for="SemiAsegurada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prima" class="control-label"></label>
                <input asp-for="Prima" class="form-control" />
                <span asp-validation-for="Prima" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-warning"><i class="bi bi-plus"></i> Editar</button>
            </div>
        </form>
    </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
